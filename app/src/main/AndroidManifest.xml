<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.verunex.wishlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity   android:name=".MainActivity"
                    android:label="@string/your_wishlists">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity   android:name=".AddWishActivity"
                    android:label="@string/add_wishlist"
                    android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity   android:name=".AddProductsPop"
                    android:label="@string/add_product"
                    android:windowSoftInputMode="stateAlwaysHidden"
                    android:theme="@style/DialogTheme"

            />
    </application>

</manifest>